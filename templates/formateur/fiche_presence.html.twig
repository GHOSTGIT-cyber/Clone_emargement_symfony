{# 
 * templates/formateur/fiche_presence.html.twig - VERSION MODERNISÉE
 * Style harmonisé avec le nouveau dashboard
 * JS externe pour plus de lisibilité
 * CONSERVE TOUTE LA LOGIQUE EXISTANTE
 #}
{% extends 'base.html.twig' %}

{% block title %}Fiche de présence - {{ session.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# CSS séparé et modernisé #}
    <link rel="stylesheet" href="{{ asset('css/formateur/fiche_presence_moderne.css') }}">
    {# Librairie SignaturePad pour les signatures #}
    <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
    {# Font Awesome pour les icônes #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
<div class="fiche-presence-container">
    
    {# === MESSAGES FLASH === #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-triangle' }}"></i>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {# === HEADER MODERNE === #}
    <div class="fiche-header">
        <div class="header-left">
            <div class="formateur-avatar">
                {{ app.user.firstname|slice(0, 1)|upper }}{{ app.user.lastname|slice(0, 1)|upper }}
            </div>
            <div class="session-info">
                <h1>{{ session.titre }}</h1>
                <p class="session-meta">
                    <i class="fas fa-calendar"></i> {{ session.date }} 
                    <i class="fas fa-clock"></i> {{ session.horaire }}
                </p>
            </div>
        </div>
        
        <div class="header-center">
            <img src="{{ asset('images/gefor.jpg') }}" alt="Groupe GEFOR" class="logo">
        </div>
        
        <div class="header-right">
            <div class="signatures-counter">
                <div class="counter-label">Signatures obtenues</div>
                <div class="counter-value">{{ session.signatures_obtenues }}/{{ session.signatures_total }}</div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: {{ (session.signatures_obtenues / session.signatures_total * 100)|default(0) }}%"></div>
                </div>
            </div>
            
            {# BOUTON DÉCONNEXION UNIQUE #}
            <form action="{{ path('app_logout') }}" method="post" class="logout-form">
                <button type="submit" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Déconnexion
                </button>
            </form>
        </div>
    </div>

    {# === SECTION PRINCIPALE === #}
    <div class="main-content">
        
        {# === FORMULAIRE D'ACTIVATION SESSION === #}
        <div class="activation-section">
            <h2>
                <i class="fas fa-paper-plane"></i>
                Activation de la session pour signature
            </h2>
            <p class="section-description">
                Sélectionnez les apprenants et activez la session pour qu'ils puissent signer électroniquement.
            </p>
            
            {# FORMULAIRE EXISTANT - CONSERVE LA LOGIQUE #}
            <form action="{{ path('formateur_envoyer_email_signature', {'id': app.request.get('id')}) }}" method="post" class="activation-form">
                <button type="submit" class="activation-btn">
                    <i class="fas fa-envelope"></i>
                    Activer la session et envoyer les notifications
                </button>
                
                {# === TABLEAU DES APPRENANTS MODERNISÉ === #}
                <div class="apprenants-table-container">
                    <table class="apprenants-table">
                        <thead>
                            <tr>
                                <th class="checkbox-col">
                                    <input type="checkbox" id="select-all" title="Sélectionner tous">
                                </th>
                                <th class="student-col">Apprenant</th>
                                <th class="status-col">Statut</th>
                                <th class="time-col">Heure signature</th>
                                <th class="comment-col">Commentaire</th>
                                <th class="retard-col">Motif retard</th>
                                <th class="absence-col">Absence justifiée</th>
                                <th class="anticipation-col">Départ anticipé</th>
                                <th class="actions-col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {# BOUCLE SUR LES APPRENANTS - CONSERVE LA LOGIQUE EXISTANTE #}
                            {% for apprenant in apprenants %}
                                {% set signature = null %}
                                {# Recherche de la signature de cet apprenant #}
                                {% for sig in signatures %}
                                    {% if sig.user.id == apprenant.id %}
                                        {% set signature = sig %}
                                    {% endif %}
                                {% endfor %}
                                
                                <tr class="student-row" data-student-id="{{ apprenant.id }}">
                                    {# CHECKBOX POUR ACTIVATION #}
                                    <td class="checkbox-col">
                                        <input type="checkbox" name="apprenants[]" value="{{ apprenant.id }}" class="student-checkbox">
                                    </td>
                                    
                                    {# INFORMATIONS ÉTUDIANT #}
                                    <td class="student-col">
                                        <div class="student-info">
                                            <div class="student-avatar">
                                                {{ apprenant.firstname|slice(0, 1)|upper }}{{ apprenant.lastname|slice(0, 1)|upper }}
                                            </div>
                                            <div class="student-details">
                                                <div class="student-name">{{ apprenant.firstname }} {{ apprenant.lastname }}</div>
                                                <div class="student-email">{{ apprenant.email }}</div>
                                            </div>
                                        </div>
                                    </td>
                                    
                                    {# STATUT AVEC INDICATEURS VISUELS #}
                                    <td class="status-col">
                                        {% if signature %}
                                            {% if signature.statut == 'présent' %}
                                                <span class="status-badge status-present">
                                                    <i class="fas fa-check-circle"></i>
                                                    Présent
                                                </span>
                                            {% elseif signature.statut == 'retard' %}
                                                <span class="status-badge status-late">
                                                    <i class="fas fa-clock"></i>
                                                    En retard
                                                </span>
                                            {% elseif signature.statut == 'absent' %}
                                                {% if signature.justifie %}
                                                    <span class="status-badge status-justified">
                                                        <i class="fas fa-exclamation-circle"></i>
                                                        Absence justifiée
                                                    </span>
                                                {% else %}
                                                    <span class="status-badge status-absent">
                                                        <i class="fas fa-times-circle"></i>
                                                        Absent
                                                    </span>
                                                {% endif %}
                                            {% else %}
                                                <span class="status-badge status-pending">
                                                    <i class="fas fa-hourglass-half"></i>
                                                    En attente
                                                </span>
                                            {% endif %}
                                        {% else %}
                                            <span class="status-badge status-pending">
                                                <i class="fas fa-hourglass-half"></i>
                                                En attente
                                            </span>
                                        {% endif %}
                                    </td>
                                    
                                    {# HEURE DE SIGNATURE #}
                                    <td class="time-col">
                                        {% if signature and signature.heureSignature %}
                                            <span class="signature-time">
                                                <i class="fas fa-clock"></i>
                                                {{ signature.heureSignature|date('H:i') }}
                                            </span>
                                        {% else %}
                                            <span class="no-signature">—</span>
                                        {% endif %}
                                    </td>
                                    
                                    {# COMMENTAIRE #}
                                    <td class="comment-col">
                                        {% if signature and signature.commentaire %}
                                            <div class="comment-preview" title="{{ signature.commentaire }}">
                                                <i class="fas fa-comment-alt"></i>
                                                {{ signature.commentaire|slice(0, 30) }}{% if signature.commentaire|length > 30 %}...{% endif %}
                                            </div>
                                        {% else %}
                                            <span class="no-comment">—</span>
                                        {% endif %}
                                    </td>
                                    
                                    {# MOTIF RETARD #}
                                    <td class="retard-col">
                                        {% if signature and signature.motifRetard %}
                                            <div class="retard-motif" title="{{ signature.motifRetard }}">
                                                <i class="fas fa-info-circle"></i>
                                                {{ signature.motifRetard|slice(0, 25) }}{% if signature.motifRetard|length > 25 %}...{% endif %}
                                            </div>
                                        {% else %}
                                            <span class="no-motif">—</span>
                                        {% endif %}
                                    </td>
                                    
                                    {# ABSENCE JUSTIFIÉE #}
                                    <td class="absence-col">
                                        {% if signature and signature.motifAbsence %}
                                            <div class="absence-motif" title="{{ signature.motifAbsence }}">
                                                <i class="fas fa-file-alt"></i>
                                                {{ signature.motifAbsence|slice(0, 20) }}{% if signature.motifAbsence|length > 20 %}...{% endif %}
                                            </div>
                                        {% else %}
                                            <span class="no-absence">—</span>
                                        {% endif %}
                                    </td>
                                    
                                    {# DÉPART ANTICIPÉ (NOUVELLE COLONNE) #}
                                    <td class="anticipation-col">
                                        {% if signature and signature.motifDetails %}
                                            <div class="anticipation-motif" title="{{ signature.motifDetails }}">
                                                <i class="fas fa-running"></i>
                                                {{ signature.motifDetails|slice(0, 20) }}{% if signature.motifDetails|length > 20 %}...{% endif %}
                                            </div>
                                        {% else %}
                                            <span class="no-anticipation">—</span>
                                        {% endif %}
                                    </td>
                                    
                                    {# MENU ACTIONS MODERNISÉ - STYLE ORIGINAL #}
                                    <td class="actions-col">
                                        <div class="actions">
                                            <button type="button" class="action-btn" 
                                                    data-student-name="{{ apprenant.firstname }} {{ apprenant.lastname }}"
                                                    aria-label="Actions pour {{ apprenant.firstname }} {{ apprenant.lastname }}">
                                                <span class="more-icon"></span>
                                            </button>
                                            
                                            {# MENU DÉROULANT - STYLE ORIGINAL #}
                                            <div class="dropdown-menu">
                                                <ul>
                                                    {# SIGNATURE MANUELLE #}
                                                    <li>
                                                        <span class="icon sign-icon"></span>
                                                        <button type="button" class="sign-manual" 
                                                                data-signature-id="{{ signature ? signature.id : '' }}"
                                                                data-student-name="{{ apprenant.firstname }} {{ apprenant.lastname }}">
                                                            Faire signer manuellement
                                                        </button>
                                                    </li>
                                                    
                                                    {# MARQUER EN RETARD #}
                                                    <li>
                                                        <span class="icon late-icon"></span>
                                                        <button type="button" class="mark-late" 
                                                                data-signature-id="{{ signature ? signature.id : '' }}"
                                                                data-session-id="{{ session.id }}">
                                                            Marquer en retard
                                                        </button>
                                                    </li>
                                                    
                                                    {# AJOUTER COMMENTAIRE #}
                                                    <li>
                                                        <span class="icon comment-icon"></span>
                                                        <button type="button" class="add-comment" 
                                                                data-signature-id="{{ signature ? signature.id : '' }}">
                                                            Ajouter commentaire
                                                        </button>
                                                    </li>
                                                    
                                                    {# ABSENCE JUSTIFIÉE #}
                                                    <li>
                                                        <span class="icon absence-icon"></span>
                                                        <form method="post" action="{{ path('signature_session_justified', {'id': signature ? signature.id : 0}) }}" style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('justified_signature_' ~ (signature ? signature.id : 0)) }}">
                                                            <input type="hidden" name="session_id" value="{{ session.id }}">
                                                            <button type="submit" onclick="return confirm('Marquer cette absence comme justifiée ?')">
                                                                Absence justifiée
                                                            </button>
                                                        </form>
                                                    </li>
                                                    
                                                    {# EFFACER SIGNATURE #}
                                                    {% if signature and signature.signatureData %}
                                                    <li>
                                                        <span class="icon send-icon"></span>
                                                        <form method="post" action="{{ path('signature_session_delete', {'id': signature.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_signature_' ~ signature.id) }}">
                                                            <input type="hidden" name="session_id" value="{{ session.id }}">
                                                            <button type="submit" onclick="return confirm('Effacer cette signature ?')">
                                                                Effacer signature
                                                            </button>
                                                        </form>
                                                    </li>
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

{# === POPUP SIGNATURE (CONSERVE LE STYLE EXISTANT) === #}
<div id="signature-popup" class="signature-popup {% if not formateur_a_deja_signe %}active{% endif %}">
    <div class="signature-modal">
        <h2>Signature du formateur</h2>
        <p class="signature-instructions">
            Veuillez signer ci-dessous pour accéder à la fiche de présence
        </p>
        
        <div class="signature-container">
            <canvas id="signature-canvas" class="signature-canvas" width="500" height="200"></canvas>
        </div>
        
        <div class="signature-buttons">
            <button type="button" id="btn-retour" class="btn-signature btn-retour">
                <i class="fas fa-times"></i>
                Annuler
            </button>
            <button type="button" id="btn-effacer" class="btn-signature btn-effacer">
                <i class="fas fa-eraser"></i>
                Effacer
            </button>
            <button type="button" id="btn-valider" class="btn-signature btn-valider">
                <i class="fas fa-check"></i>
                Valider la signature
            </button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# DÉFINITION DES ROUTES POUR LE JAVASCRIPT #}
    <script>
        // Configuration des routes utilisées par le JavaScript
        // Ces URLs sont générées par Symfony et utilisées par les fonctions JS
        window.routes = {
            signatureFormateur: "{{ path('formateur_sauvegarder_signature', {'id': app.request.get('id')}) }}",
            signatureManuelle: "{{ path('apprenant_signature_manual_sign', {'id': 'SIGNATURE_ID'}) }}",
            marquerRetard: "{{ path('signature_session_late', {'id': 'SIGNATURE_ID'}) }}",
            ajouterCommentaire: "{{ path('signature_session_comment', {'id': 'SIGNATURE_ID'}) }}"
        };
        
        // ID de session pour certaines opérations
        window.sessionId = {{ app.request.get('id') }};
        
        console.log('[Config] Routes JavaScript configurées');
    </script>
    
    {# SCRIPT TEST TEMPORAIRE - Pour vérifier que tout marche #}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('=== TEST FICHE PRÉSENCE ===');
        
        // Test des éléments essentiels
        const popup = document.getElementById('signature-popup');
        const canvas = document.getElementById('signature-canvas');
        const btnOuvrir = document.getElementById('btn-ouvrir-signature');
        const menusActions = document.querySelectorAll('.action-btn');
        const boutonsRetard = document.querySelectorAll('.mark-late');
        const boutonsCommentaire = document.querySelectorAll('.add-comment');
        const boutonsSignature = document.querySelectorAll('.sign-manual');
        
        console.log('Popup signature:', !!popup);
        console.log('Canvas signature:', !!canvas);
        console.log('Bouton ouvrir signature:', !!btnOuvrir);
        console.log('Menus actions:', menusActions.length);
        console.log('Boutons retard:', boutonsRetard.length);
        console.log('Boutons commentaire:', boutonsCommentaire.length);
        console.log('Boutons signature manuelle:', boutonsSignature.length);
        console.log('SignaturePad disponible:', typeof SignaturePad !== 'undefined');
        
        // Test ouverture popup signature
        if (btnOuvrir && popup) {
            btnOuvrir.addEventListener('click', function() {
                console.log('CLIC BOUTON SIGNATURE DÉTECTÉ !');
                popup.classList.add('active');
            });
        }
        
        // Test menus déroulants
        menusActions.forEach((btn, index) => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                console.log(`CLIC MENU ${index + 1} DÉTECTÉ !`);
                
                const menu = btn.parentElement.querySelector('.dropdown-menu');
                if (menu) {
                    // Ferme tous les autres
                    document.querySelectorAll('.dropdown-menu.active').forEach(m => m.classList.remove('active'));
                    // Ouvre celui-ci
                    menu.classList.toggle('active');
                }
            });
        });
        
        // Test actions dans les menus
        boutonsRetard.forEach(btn => {
            btn.addEventListener('click', function() {
                console.log('CLIC RETARD DÉTECTÉ !');
                const motif = prompt('Test motif retard:');
                if (motif) {
                    console.log('Motif saisi:', motif);
                    alert('Test réussi - Retard: ' + motif);
                }
            });
        });
        
        boutonsCommentaire.forEach(btn => {
            btn.addEventListener('click', function() {
                console.log('CLIC COMMENTAIRE DÉTECTÉ !');
                const commentaire = prompt('Test commentaire:');
                if (commentaire) {
                    console.log('Commentaire saisi:', commentaire);
                    alert('Test réussi - Commentaire: ' + commentaire);
                }
            });
        });
        
        boutonsSignature.forEach(btn => {
            btn.addEventListener('click', function() {
                console.log('CLIC SIGNATURE MANUELLE DÉTECTÉ !');
                if (popup) {
                    popup.classList.add('active');
                    alert('Test signature manuelle - Popup ouverte');
                }
            });
        });
    });
    </script>
    
    {# JS EXTERNE POUR PLUS DE LISIBILITÉ #}
    <script src="{{ asset('js/formateur/fiche_presence_actions.js') }}"></script>
{% endblock %}